	"event": [
		{
			"listen": "prerequest",
			"script": {
				"id": "40fd4b94-553f-427b-aa4b-c5415a9f20f3",
				"type": "text/javascript",
				"exec": [
					"const url = `${pm.variables.get('authUrl')}/auth/realms/${pm.variables.get('authRealm')}/protocol/openid-connect/token`;",
					"",
					"pm.sendRequest({",
					"    url,",
					"    method: 'POST',",
					"    headers: { 'Content-Type': 'application/x-www-form-urlencoded' },",
					"    body: {",
					"        mode: 'urlencoded',",
					"        urlencoded: [",
					"            {",
					"                key: 'grant_type',",
					"                value: 'client_credentials'",
					"            },",
					"            {",
					"                key: 'client_id',",
					"                value: pm.variables.get('authClient')",
					"            },",
					"            {",
					"                key: 'client_secret',",
					"                value: pm.variables.get('authSecret')",
					"            },",
					"            {",
					"                key: 'redirect_uri',",
					"                value: pm.variables.get('host')",
					"            }",
					"        ]",
					"    }",
					"}, (err, response) => {",
					"    const json = response.json();",
					"    const token = json.access_token;",
					"    pm.globals.set('accessToken', token);",
					"});",
					""
				]
			}
		},
